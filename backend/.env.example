# Database Configuration
DATABASE_URL=mongodb://localhost:27017/zuzuplan

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# JWT Configuration
JWT_SECRET=change-this-to-a-random-secret-key-in-production
JWT_REFRESH_SECRET=change-this-to-a-different-random-secret-key-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=noreply@zuzuplan.com

# Firebase Configuration (Optional)
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----
# FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# File Upload Configuration
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
MAX_FILE_SIZE=10485760

# Application-Layer Encryption (Optional)
# RSA_PUBLIC_KEY_PEM=-----BEGIN PUBLIC KEY-----\nYour public key here\n-----END PUBLIC KEY-----
# RSA_PRIVATE_KEY_PEM=-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----
# ENCRYPTION_KEY=base64-encoded-32-byte-key
ENCRYPTION_MAX_AGE_MS=120000
